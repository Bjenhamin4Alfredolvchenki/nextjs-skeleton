{
	"name": "nextjs-skeleton",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --no-cache --parallel --continue",
		"clean": "turbo run clean && rm -rf node_modules",
		"lint": "turbo run lint",
		"prepare": "husky install",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsm,md,json}\""
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"devDependencies": {
		"eslint": "^7.32.0",
		"husky": "^7.0.4",
		"prettier": "^2.5.1",
		"turbo": "latest"
	},
	"volta": {
		"node": "14.18.2",
		"npm": "8.3.0"
	},
	"turbo": {
		"baseBranch": "origin/main",
		"pipeline": {
			"build": {
				"dependsOn": [
					"^build"
				],
				"outputs": [
					".next/**"
				]
			},
			"lint": {
				"outputs": []
			},
			"dev": {
				"cache": false
			}
		}
	}
}
